general {
	colors = true
		interval = 5
}

order += "cpu_usage"
order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "tztime local"

cpu_usage {
	format = " cpu  %usage "
}

load {
	format = " load %1min "
}

disk "/" {
	format = " ⛁ %avail "
}

wireless _first_ {
	format_up = " W: (%quality at %essid) %ip "
	format_down = " W: down "
}


ethernet _first_ {
	format_up = " L: %ip %speed "
	format_down = " L: down "
}

battery all {
	format = " %status %percentage"
	format_down = "No battery"
	last_full_capacity = true
	integer_battery_capacity = true
	status_chr = "⚡"
	status_bat = ""
	status_unk = ""
	status_full = "☻"
	low_threshold = 15
	threshold_type = time
}

tztime local {
	format = "%A %Y-%m-%d %H:%M"
}
