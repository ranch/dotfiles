separator_block_width=15
markup=none
command=$SCRIPT_DIR/$BLOCK_NAME

# Query my default IP address only on startup
[ip]
command=hostname -i | awk '{ print "IP:" $1 }'
interval=once
color=#91E78B

# Update time every 5 seconds
[time]
command=date +%T
interval=5
color=#A6D1FA

[battery]
markup=pango
interval=30

[time]
interval=1
STRFTIME_FORMAT=%Y-%m-%d %H:%M
TZONES=Asia/Jakarta,Europe/London,Canada/Central
TZ_LABELS=Jakarta,UK,Canada

[volume-pulseaudio]
command=$SCRIPT_DIR/volume-pulseaudio
interval=once
signal=1
