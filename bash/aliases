# Navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd $HOME"

# Shortcuts 
alias vi="nvim"
alias vimrc="vi $HOME/.config/nvim/init.vim"
alias subl="subl3"
alias l="ls -la"
alias hosts="sudo $EDITOR /etc/hosts"
alias dot="cd $HOME/dotfiles"
alias dc="docker-compose"

# Override commands
alias rm="rm -i"
