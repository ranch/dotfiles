export EDITOR=nvim
export GDRIVE=$HOME/Documents/gdrive
export PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:~/.local/bin:/usr/bin/vendor_perl

# Go
export GOROOT_BOOTSTRAP=/usr/local/go-1.9.2
export GOPATH=/home/randy/workspace/go
export GOROOT=$GOPATH/src/go
export PATH=$PATH:$GOROOT/bin:$GOPATH/bin

# Google Cloud SDK
export PATH=$PATH:/usr/local/google-cloud-sdk/bin

# Yarn
export PATH=$PATH:/home/randy/.config/yarn/global/bin

# nvm
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# Shortcuts
export GITHUB=$GOPATH/src/github.com
export GITLAB=$GOPATH/src/gitlab.com
export BITBUCKET=$GOPATH/src/bitbucket.org

export RND=$GITHUB/rnd
export SYNODAY=$GITHUB/synoday
export BRANKAS=$GOPATH/src/brank.as
export BITROUPE=$GOPATH/src/git.bitroupe.com
export SPICY=$GITHUB/spicynoodle

